{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "jest-setup.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.js",
    "tests/**/*.spec.js",
    "tests/**/*.test.jsx",
    "tests/**/*.spec.jsx",
    "tests/**/*.d.ts"
  ]
}
